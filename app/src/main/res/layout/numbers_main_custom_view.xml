<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/text_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3"
    tools:background="@color/category_numbers">

    <ImageView
        android:id="@+id/word_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/tan_background"
        tools:src="@drawable/color_white" />

    <LinearLayout
        android:id="@+id/word_LinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/miwok_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="4dp"
            android:textColor="@color/bgcolor_for_numbers_main_custom_view_ImageView"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="One" />

        <TextView
            android:id="@+id/eng_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/bgcolor_for_numbers_main_custom_view_ImageView"
            android:textSize="18sp"
            tools:text="One" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:src="@drawable/play_pronunciation" />
    </FrameLayout>
</LinearLayout>